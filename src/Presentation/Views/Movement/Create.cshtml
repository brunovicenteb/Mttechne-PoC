@model MovementViewModel
@{
    ViewBag.Subtitulo = "Create new movement";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Create" class="row">
    <input type="hidden" asp-for="@Model.Id">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.MovementTypeId">Type:</label><br>
        <select asp-for="@Model.MovementTypeId" class="form-control"
                asp-items="@(IEnumerable<SelectListItem>)ViewBag.Types" autofocus"></select>
        <span asp-validation-for="@Model.MovementTypeId" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Description">Description:</label><br>
        <input asp-for="@Model.Description" class="form-control">        
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-4 col-lg-2">
        <label asp-for="@Model.Value">Value:</label><br>
        <input asp-for="@Model.Value" class="form-control">
        <span asp-validation-for="@Model.Value" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>