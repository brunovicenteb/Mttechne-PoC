@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
    var classMainMenu = currentController == "Home" ? "active" : "";
    var classMovement = currentController == "Movement" ? "active" : "";
    var classConsolidate = currentController == "Consolidate" ? "active" : "";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Mttechne Web :: @ViewBag.Subtitulo</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Mttechne Web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link @classMainMenu" asp-controller="Home" asp-action="Index"><i class="bi bi-shop" title="Home"></i>Home</a>
                    <a class="nav-link @classMovement" asp-controller="Movement" asp-action="Index"><i class="bi bi-cash-coin" title="Movement"></i>Movement</a>
                    <a class="nav-link @classConsolidate" asp-controller="Consolidate" asp-action="Index"><i class="bi bi-cash-coin" title="Consolidate"></i>Consolidate</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        Belchior Test Mttechne&copy; @DateTime.Now.Year.ToString()<br>
        All rights reserved
    </div>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", false)

</body>

</html>