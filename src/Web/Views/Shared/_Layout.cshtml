@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var controllerAtual = ViewContext.RouteData.Values["controller"].ToString();
    var classeMenuPrincipal = controllerAtual == "Home" ? "active" : "";
    var classeMenuProdutos = controllerAtual == "Cerveja" ? "active" : "";
    var classeMenuClientes = controllerAtual == "Cliente" ? "active" : "";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/estilos.css">
    <title>Ambev Web :: @ViewBag.Subtitulo</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Ambev Web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link @classeMenuPrincipal" asp-controller="Home" asp-action="Index"><i class="bi bi-shop" title="Home"></i>Home</a>
                    <a class="nav-link @classeMenuProdutos" asp-controller="Cerveja" asp-action="Index"><i class="bi-cup-straw" title="Cervejas"></i>Cervejas</a>
                    <a class="nav-link @classeMenuClientes" asp-controller="Cliente" asp-action="Index"><i class="bi-person" title="Clientes"></i>Clientes</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        Belchior Teste Ambev&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
    </div>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", false)

</body>

</html>